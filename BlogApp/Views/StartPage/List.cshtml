@model List<Post>

<div class="row">
    <div class="col-12">
        <h2>Post List</h2>
        <a href="/StartPage/Create" class="btn btn-primary">New Post</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 125px;">Image</th>
                    <th>Title</th>
                    <th>IsActive</th>
                    <th style="width: 150px;">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/img/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/StartPage/Edit/@item.PostId" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.PostId" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>