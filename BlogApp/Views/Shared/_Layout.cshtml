<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-,cons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Welcome!</title>


</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                MyBlogApp
            </a>

            <!-- Flex container for alignment -->
            <div class="d-flex ms-auto">
                <ul class="navbar-nav d-flex flex-row me-3">
                    @* <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li> *@
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Profile", "Users", new { username = User.Identity.Name })" class="nav-link">@User.Identity.Name</a>

                        </li>
                        <li class="nav-item">
                            <a asp-controller="Users" asp-action="Logout" class="nav-link">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Users" asp-action="Login" class="nav-link">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-5g02F7rTzF7rx58W4cdStcrCWiz2+Yt5jI+N4UQ/8AIrPmsS1D7nD4Kp7iSABTm8" crossorigin="anonymous"></script>
</body>

<footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
    <div class="col-md-4 d-flex align-items-center">
      <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
        <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
      </a>
      <span class="text-muted">&copy; 2024 BlogApp. All rights reserved.</span>
    </div>

    <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
      <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
      <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
    </ul>
  </footer>
@RenderSection("Scripts", required: false)

</html>

