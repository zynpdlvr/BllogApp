@using BlogApp.Models
@model LoginViewModel

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="bg-white p-4 rounded shadow">

            <h3 class="mb-4 text-center">Login</h3>
            
            <form asp-controller="Users" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                
                <div class="text-center mt-4">
                    <button type="submit" class="buttonAll btn btn-success" >Login</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <p>Don't have an account?</p>
                <a asp-controller="Users" asp-action="Register" class="buttonAll btn btn-success" >Register</a>
            </div>
        </div>
    </div>
</div>
